#!/bin/bash

set -o errexit

tar \
  --directory="${BOSH_INSTALL_TARGET}" \
  --strip-components=1 \
  --wildcards \
  --extract \
  --file mysql/mysql-8.0*.tar.xz \
  "*/README" "*/LICENSE" \
  "*/bin/mysql" "*/bin/mysqldump" \
  "*/lib/private/libssl.so*" "*/lib/private/libcrypto.so*" \
  "*/share/"

tar -xf ncurses/ncurses-6.3.tar.gz
cd ncurses-*/
./configure \
  --with-abi-version=5 \
  --with-shared \
  --with-termlib \
  --without-cxx-binding \
  --without-debug \
  --without-develop \
  --without-normal \
  --prefix="${BOSH_INSTALL_TARGET}" \
  --libdir="${BOSH_INSTALL_TARGET}/lib/private"
make -j "$(nproc)" install
